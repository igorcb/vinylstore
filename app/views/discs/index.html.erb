<p id="notice"><%#= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Listing Discs</div>
  <div class="panel-body">
    <%= link_to 'New Disc', new_disc_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Price</th>
            <th>State</th>
            <th colspan="3">Options</th>
         </tr>
        </thead>

        <tbody>
          <% @discs.each do |disc| %>
            <tr>
              <td><%= disc.name %></td>
              <td><%= disc.year %></td>
              <td><%= disc.price %></td>
              <td><%= disc.state_name %></td>
              <td><%= link_to 'Show', disc, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_disc_path(disc), class: "btn btn-primary btn-sm"  %></td>
              <td><%= link_to 'Destroy', disc, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
